rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Products: anyone can read, admin-only writes
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Deals: anyone can read, admin-only writes
    match /deals/{dealId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Orders: anyone can create, users read own, admins read/update all
    match /orders/{orderId} {
      allow create: if true;
      allow read: if true;
      allow update: if isAdmin();
    }

    // Users: read/write own document only
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Settings: anyone can read, admin-only writes
    match /settings/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Helper: check if user is admin
    function isAdmin() {
      return request.auth != null
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
